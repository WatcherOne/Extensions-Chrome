{
    "manifest_version": 3,
    "name": "chrome-plugin",
    "version": "1.0.0",
    "author": "watcher",
    "description": "a chrome plugin",
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png"
    },
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/jquery-3.6.0.min.js", "js/content.js"],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "contextMenus",
        "notifications",
        "tabs",
        "activeTab",
        "background"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "default_locale": "zh_CN"
}