{
    "manifest_version": 3,
    "name": "watcher",
    "version": "1.0.0",
    "author": {
        "email": "zhubo.watcher@gmail.com"
    },
    "description": "A Chrome Extension for Developer Use",
    "icons": {
        "16": "public/images/icon-16.png",
        "32": "public/images/icon-32.png",
        "48": "public/images/icon-48.png",
        "128": "public/images/icon-128.png"
    },
    "options_page": "src/options/index.html",
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "background": {
        "service_worker": "src/background/index.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/content/index.js"],
            "css": ["src/content/index.css"],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "alarms",
        "contextMenus",
        "notifications",
        "webRequest"
    ],
    "omnibox": {
        "keyword": "w."
    },
    "commands": {
        "color-copy": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            },
            "description": "you can picker color to copy board"
        }
    },
    "host_permissions": ["*://*/*"],
    "default_locale": "zh_CN"
}
